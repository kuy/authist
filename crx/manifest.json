{
  "name": "Authist",
  "version": "0.1.0",
  "description": "Assists MFA/2FA",
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["dist/bundle.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {},
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "web_accessible_resources": ["plugin-runtime.js", "sites/*.js"],
  "permissions": ["nativeMessaging", "tabs", "activeTab", "https://*/*"],
  "manifest_version": 2
}
